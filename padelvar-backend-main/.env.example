# Configuration de l'environnement PadelVar
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Environnement Flask (development, production, testing)
FLASK_ENV=development

# Clé secrète pour Flask (OBLIGATOIRE en production)
SECRET_KEY=padelvar_secret_key_2024_secure

# Configuration de la base de données
SQLALCHEMY_ECHO=False

# Configuration CORS (origines autorisées séparées par des virgules)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Configuration de l'administrateur par défaut
ADMIN_EMAIL=admin@padelvar.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Super Admin
ADMIN_CREDITS=1000

# Configuration du serveur
HOST=0.0.0.0
PORT=5000
DEBUG=True

